# ============================================
# Skavtech Production Environment Variables
# ============================================

# Database Configuration
POSTGRES_DB=skavtech_prod
POSTGRES_USER=skavtech_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION

# Application Configuration
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# Database Connection (used by backend service)
DATABASE_URL=postgresql://skavtech_user:${POSTGRES_PASSWORD}@db:5432/skavtech_prod

# Authentication & Security
SESSION_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_RANDOM_SECRET_64_CHARS_MINIMUM
JWT_SECRET=CHANGE_THIS_TO_A_DIFFERENT_VERY_STRONG_RANDOM_SECRET_64_CHARS_MINIMUM

# Logging
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=https://skavtech.co.ke,https://www.skavtech.co.ke

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your-app-password

# WhatsApp Integration (Optional)
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER=+1234567890

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Monitoring & Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Redis Configuration (Optional - for session storage scaling)
REDIS_URL=redis://redis:6379

# SSL/HTTPS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ============================================
# KENYAN DEPLOYMENT NOTES:
# ============================================
# - Time Zone: Africa/Nairobi (UTC+3)
